{
    "coc.preferences.extensionsUpdateCheck":"daily",
    "coc.preferences.enableFloatHighlight": true,
    "diagnostic": {
        "checkCurrentLine":true,
        "displayByAle":false,
        "virtualText":false,
        "errorSign":"\uf05e",
        "warningSign":"\uf071",
        "hintSign":"\ufe15",
        "infoSign":"\u2139"
    },

    "list.maxPreviewHeight":30,
    "list.interactiveDebounceTime":200,
    "git": {
        "enableGutters":true,
        "signOffset":99,
        "addGBlameToVirtualText":false,
        "addGBlameToBufferVar":true,
        "virtualTextPrefix":"⇝ ",
        "branchCharacter":"\uf418",
        "addedSign.text":"▏",
        "changedSign.text":"▏",
        "removedSign.text":"▏",
        "topRemovedSign.text":"⊝",
        "changeRemovedSign.text":"≃"
    },

    "python": {
        "setInterpreter":"/usr/bin/python3",
        "linting": {
            "enabled":false
        },
        "plugins": {
            "jedi_completion": {
                "enabled": true
            },
            "jedi_hover": {
                "enabled": true
            },
            "jedi_references": {
                "enabled": true
            },
            "jedi_signature_help": {
                "enabled": true
            },
            "jedi_symbols": {
                "enabled": true,
                "all_scopes": true
            },
            "mccabe": {
                "enabled": true,
                "threshold": 15
            },
            "preload": {
                "enabled": true
            },
            "pycodestyle": {
                "enabled": true
            },
            "pyflakes": {
                "enabled": true
            },
            "rope_completion": {
                "enabled": true
            },
            "yapf": {
                "enabled": true
            }
        }
    },

    "suggest": {
        "timeout":1000,
        "snippetIndicator":"\u24c8"
    },
    "codeLens": {
        "enable":false
    },

    "cSpell": {
        "enabled": true,
        "showStatus": false,
        "enabledLanguageIds": ["sh", "c", "cpp", "python"],
        "includeRegExpList": ["string", "CStyleComment", "#.*"],
        "maxNumberOfProblems": 50,
        "numSuggestions": 8,
        "words": [],
        "allowCompoundWords": true,
        "ignoreWords": ["kelve"],
        "userWords": [],
        "spellCheckDelayMs":50
    },

    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/", ".root"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "Diagnostics": {
                    "onSave": 0,
                    "onChange": 1000,
                    "onOpen": 0
                },
                "clang": {
                    "resourceDir": "/usr/lib/llvm-10/lib/clang/10.0.0",
                    "extraArgs": ["-Wall", "-Wpedantic", "-Wextra", "-Wmissing-prototypes", "-Wshadow", "-Iinclude", "-Iinc", "-Wsometimes-uninitialized", "-fsanitize=address", "-fno-omit-frame-pointer", "-g"]
                }
            }
        },

        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["/home/henrique/"]
        },

        "cmake": {
            "command": "cmake-language-server",
            "filetypes": ["cmake"],
            "rootPatterns": [
                "build/"
            ],
            "initializationOptions": {
                "buildDirectory": "build"
            }
        }
    },

    "java": {
        "referencesCodeLens.enabled": true,
        "implementationsCodeLens.enabled": true,

        "signatureHelp.enabled": true,
        "progressReports.enabled": true,

        "codeGeneration.generateComments": true,
        "codeGeneration.useBlocks": true,

        "format.enabled": true,
        "format.comments.enabled": true,
        "format.onType.enabled": true,

        "completion.enabled": true,
        "foldingRange.enabled": true
    }
}
